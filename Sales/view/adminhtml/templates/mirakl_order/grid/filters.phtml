<?php
/** @var \MiraklSeller\Sales\Block\Adminhtml\MiraklOrder\Grid\Filters $block */
$pendingOrdersCount = $block->getPendingOrdersCount();
$incidentOrdersCount = $block->getOrdersWithIncidentCount();
?>
<?php echo $this->getChildHtml('messages') ?>
<div class="page-main-actions">
    <span><?php echo __('Orders waiting for your acceptance: ') ?></span>
    <a href="#" title="<?php echo $block->escapeHtml(__('Filter by orders waiting for your acceptance')) ?>"
       onclick="addOrdersGridFilter('<?php echo $block->escapeJs(json_encode(['status' => \Mirakl\MMP\Common\Domain\Order\OrderState::WAITING_ACCEPTANCE])) ?>');">
        <strong><?php echo __('%1 order%2', $pendingOrdersCount, $pendingOrdersCount > 1 ? 's' : ''); ?></strong>
