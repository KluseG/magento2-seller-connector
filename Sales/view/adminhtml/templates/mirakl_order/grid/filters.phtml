    <br>
    <span><?php echo __('Orders with opened incident: ') ?></span>
    <a href="#" title="<?php echo $block->escapeHtml(__('Filter by orders having opened incidents')) ?>"
       onclick="addOrdersGridFilter('<?php echo $block->escapeJs(json_encode(['has_incident' => 'true'])) ?>');">
